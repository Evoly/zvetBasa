            //span insta
          .footer__payment
            span Способы оплаты:
            div
              img(src='./img/payment_1.png')
              img(src='./img/payment_2.png')
              img(src='./img/payment_3.png')
              img(src='./img/payment_4.png')
              img(src='./img/payment_5.png')
              img(src='./img/payment_6.png')

